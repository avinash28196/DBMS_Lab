   INITIALIZE count1, count2 AS 0
   
   PROMPT "Enter the source string1", AND STORE IN string1
   PROMPT "Enter the sub string2", AND STORE IN string2
   
   size1= Length_first_string(string1[])
   size2= Length_second_string(string2[])
   
    IF (isStringFound(string1[size1], string2[size2]==1)
	DISPLAY "Substring found in source string"
	
	 ELSE
	 DISPLAY "String not found"
	
	END IF
   	  
