/*********************************************************************
 * Module Name         	: Length_first_string()
 * Input Parameters    : string1[count1]
 * Return Type         	: CHAR ARRAY
 * Author              	: Capgemini
 * Creation Date      	: 26-Aug-2017
 * Description        	: Calculate length of string1
 *********************************************************************/

 
 INTEGER SUB Length_first_string(CHAR ARRAY string1[count1])
 count1 AS 0
 
  WHILE(string1[count1] IS NOT NULL)
   
   count1=count1+1
   
  END WHILE
  RETURN count1
 
 END SUB 
 
 /*********************************************************************
 * Module Name         	: Length_second_string()
 * Input Parameters    : string2[count2]
 * Return Type         	: CHAR ARRAY
 * Author              	: Capgemini
 * Creation Date      	: 26-Aug-2017
 * Description        	: Calculate length of string2
 *********************************************************************/
 
 INTEGER SUB Length_second_string(CHAR ARRAY string2[count2])
 count2 AS 0
 
  WHILE(string2[count2] IS NOT NULL)
  
   count2=count2+1  
   
  END WHILE
  RETURN count2
 
 END SUB
 
/*********************************************************************
 * Module Name         	: isStringFound()
 * Input Parameters    : string1[size1], String2[size2]
 * Return Type         	: BOOLEAN
 * Author              	: Capgemini
 * Creation Date      	: 26-Aug-2017
 * Description        	: Compare string1 and string2 and find substring
 *********************************************************************/
 
 BOOLEAN SUB isStringFound(CHAR ARRAY string1[size1], CHAR ARRAY string2[size2])
 DECLARE INDEX1, INDEX2 AS INTEGER
 DECLARE flag AS INTEGER
 INITIALIZE flag TO 1
 
  FOR INDEX1=0 TO (size1-size2)
   FOR INDEX2=INDEX1 TO (INDEX1+size2)
   
   IF (string1[INDEX2] NOT EQUAL TO string2[INDEX2-INDEX1])
   
    flag=0
	EXIT

   END IF
   
    INDEX2=INDEX2+1
	
  END FOR
  
  IF (flag=1)
   EXIT
  END IF

  INDEX1=INDEX1+1
 
 END FOR
 
  IF(flag=1)
  RETURN True
  
  ELSE 
  RETURN False

  END IF

END SUB  
   
   
   
   
   
